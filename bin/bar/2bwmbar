#RESTART
pkill lemonbar

#COLORS
fg="#ebdbb2"
bg="#32302f"

hint="#282828"
norng="#fe8019"
nblk="#2b303b"
bblk="#282828"
nred="#dd6677"
bred="#bf616a"
ngrn="#8ec07c"
bgrn="#8ec07c"
nylw="#ebcb8b"
bylw="#fabd2f"
nblu="#88aaee"
bblu="#83a598"
nmag="#664477"
bmag="#b48ead"
ncyn="#636361"
bcyn="#696966"
nwht="#fbf1c7"
bwht="#ebdbb2"

## glyphs
glymem=""
glycpu=""
# glybat=""
glypkg=""
glyclock=""
glycal=""
glyint=""
glywin=""
glywac=""
glyw2=""
glyw3=""
glyw4=""
glyw5=""
glyw6=""
glyw7=""

#VARS
font="source code pro:bold:size=10"
glyph="-wuncon-siji-medium-r-normal--10-100-75-75-c-80-iso10646-1"
height=18
border=8
muslength=60
interface=wls1
#actchar="+"
#selchar="+"
#actchar=""
#selchar=""


# Lemonpop
notifybar_g="1920x24+0+0"
LW=220
LH=26
LX=1690
LY=45


if pgrep herbstluftwm; then
	monitor=${1:-0}
	bh=$(( $height + ($border * 2)))
	herbstclient pad $monitor $bh
fi

WRK(){ # Current Workspace .. 
  ws=`xprop -root _NET_CURRENT_DESKTOP | awk '{print $3}'`
	case ${ws} in
		0) echo "  ";;
		1) echo "  ";;
		2) echo "  ";;
		3) echo "  ";;
		*) echo "  ";;
	esac
}



WIN() {
    #echo -n "%{B$hint}%{F$bg}  %{F-}%{B-}"
	echo -n "%{B$bblk}%{F$bblk} $(wname $(pfw)) %{F-}%{B-}"
}


MUSIC(){ # Current song ..
      mus=$(basename "$(mpc current)" | sed "s/^\(.*\)\..*$/\1/" | cut -c1-30 )

  		if [[ $mus ]]; then
 			echo "%{F$bblk}  %{F-} ${mus}"
  		fi
}


 VOL(){ # Volume, Sets to Headset when switched ..
  switch=`amixer -c 0 get Master | awk '/Mono:/ {print $6}'`
  vol=`amixer -c 0 get Master | awk '/Mono:/ {print $4}' | tr -d '[]%,'`
  hsvol=`amixer -c 0 get PCM | awk '/Mono:/ {print $4}' | tr -d '[]%,'`


  if [ "$switch" = "[on]" ]; then
	#echo "%{F$BBLUE}  %{F-} ${vol}"
	echo "%{B$bblu}%{F$bblk}  $vol %{F-}%{B-}"
  elif [ "$switch" = "[off]" ]; then
	echo "%{B$bblu}%{F$bblk}  MUTE %{F-}%{B-}"
  else
	#echo "%{F$BBLUE}  %{F-} ${hsvol}"
        echo "%{B$bblu}%{F$bblk}  $hsvol %{F-}%{B-}"
  fi
}

