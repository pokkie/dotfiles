NET() {
	ping=`ping 8.8.8.8 -c 1 | awk '/rtt/ {printf("%d\n",$4 + 0.5)}'`

	test -n "${ping}" && echo -n "%{B$bgrn}%{F$bblk}  %{F-}%{B-}" || echo "%{F$bred}   %{F-} No Connection"
          
	echo 
}

DATE() {
    echo -n "%{B$bylw} %{F$bblk}  $(date "+%a %b %d %y")%{F-} %{B-}"
}

CLOCK() {
    echo -n "%{B$norng}%{F$bblk}  $(date "+%H:%M") %{F-}%{B-}"
}

BAR() {
    #ADD ALL THE THINGS
    while true; do
		buf=" $(WRK) %{c}$(MUSIC) %{r}$(VOL) $(NET) $(DATE) $(CLOCK)" 
		echo "$buf"	
        sleep 0.1
    done | lemonbar -f "FontAwesome:regular:size=10" \
        -f "$font" \
        -F "$fg" \
        -B "$bg" \
        -d \
	-p \
        -g $notifybar_g | sh &
}

BAR > /dev/null

